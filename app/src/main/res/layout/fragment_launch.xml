<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.SendingPlantsFragment">

        <TextView
            android:id="@+id/tvWelcomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Herzlich Willkommen"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnForwardPlantList"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginTop="48dp"
            android:text="Pflanzenliste/Daten übertragen"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWelcomeMessage" />

        <Button
            android:id="@+id/btnForwardManualWatering"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:text="Manuelle Steuerung"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnForwardDeleteData" />

        <Button
            android:id="@+id/btnForwardDeleteData"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:text="Daten auf\nMikrocontroller löschen"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnForwardCalibrateFlow" />

        <Button
            android:id="@+id/btnForwardCalibrateFlow"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:text="Wassermenge kalibrieren"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnForwardPlantList" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
